<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane minHeight="600.0" minWidth="400.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demoia.MainController">

    <top>
        <VBox alignment="TOP_RIGHT">
            <Button fx:id="btnGoToLogin" onAction="#goToLogin" text="LOGIN" />



        <!-- ImageView to display an image -->
        <ImageView fx:id="imageView" fitHeight="300.0" fitWidth="200.0" preserveRatio="true">
            <!-- Image loaded from resources -->
            <image>
                <Image url="@images/bradfieldCrestNavy.png" preserveRatio="true"/>
            </image>
        </ImageView>
        </VBox>
    </top>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</BorderPane>
